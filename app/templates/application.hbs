<a href='https://github.com/rust-lang/cargo' class='fork-me'>
  <img src='/assets/forkme.png'/>
</a>

<div id="header">
    {{#link-to "index"}}
        <img src="/assets/Cargo-Logo-Small.png" id="logo"
             height=100 width=100/>
    {{/link-to}}
    {{#link-to "index"}}
        <h1>CARGO</h2>
    {{/link-to}}

    <div class='search'>
        {{input type="text" class="search"
                placeholder="Search"
                value=search
                action="search"}}
    </div>

    <div class='nav'>
        {{#link-to "crates"}}Browse All Crates{{/link-to}}
        <span class="sep">|</span>
        {{#if session.currentUser}}
            <div class='dropdown-container'>
                <button {{action 'toggleUserOptions'}}
                        {{bind-attr class='showUserOptions:active :dropdown'}}>
                    {{user-avatar user=session.currentUser size='small'}}
                    {{ session.currentUser.name }}
                    <span class='arrow'></span>
                </button>
                <ul id='current-user-links'
                    {{bind-attr class='showUserOptions:open :dropdown'}}>
                    <li>{{#link-to 'dashboard'}}Dashboard{{/link-to}}</li>
                    <li>{{#link-to 'me'}}Account Settings{{/link-to}}</li>
                    <li class='last'>{{#link-to 'logout'}}Sign Out{{/link-to}}</li>
                </ul>
            </div>
        {{else}}
            {{#link-to "login"}}
                <img src="/assets/lock.png"/>
                Log in with GitHub
            {{/link-to}}
        {{/if}}
    </div>

    <div class='links'>
    </div>
</div>

<div id="main" class='inner-content'>
    <p id='flash' {{bind-attr class="flashError:shown"}}>{{flashError}}</p>

    {{outlet}}
</div>

<div class='after-main-links'>
    {{#link-to 'install'}}Downloads{{/link-to}}
    <span class="sep">|</span>
    <a>About</a>
</div>
